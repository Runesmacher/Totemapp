<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
    <LinearLayout
        android:id="@+id/detail"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TotemAndroid.CustomFontTextView
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="34sp"
                android:textColor="@color/totembrown"
                app:font="@string/Verveine" />
            <TotemAndroid.CustomFontTextView
                android:id="@+id/title_synonyms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="34sp"
                android:textColor="@color/totemblue"
                app:font="@string/Verveine" />
            <TotemAndroid.CustomFontTextView
                android:id="@+id/synonyms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/totemblue"
                android:textStyle="italic"
                app:font="@string/DIN_light" />
        </LinearLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/Lijn_bold" />
        <TotemAndroid.CustomFontTextView
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="5sp"
            android:paddingBottom="30sp"
            android:textColor="@android:color/black"
            android:gravity="fill_horizontal"
            app:font="@string/DIN_light" />
        <TotemAndroid.CustomFontTextView
          android:id="@+id/eigenschap_Title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="34sp"
          android:layout_marginTop="10sp"
          android:paddingBottom="5sp"
          android:textColor="@color/totemblue"
          android:gravity="fill_horizontal"
          app:font="@string/Verveine" />
        <TotemAndroid.CustomFontTextView
            android:id="@+id/eigenschappen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="5sp"
            android:paddingBottom="30sp"
            android:textColor="@android:color/black"
            android:gravity="fill_horizontal"
            app:font="@string/DIN_light" />
    </LinearLayout>
</ScrollView>